{
  "name": "rave-news",
  "version": "1.0.0",
  "description": "Rave-News is a project dedicated to connecting and informing rave and festival enthusiasts around the globe. Our mission is to provide a platform where electronic music lovers can discover amazing events, from indoor parties ðŸŽ¶ to large outdoor festivals ðŸŒ³.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "npx eslint .",
    "test": "npm run docker:up && concurrently --n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watchAll --runInBand",
    "docker:up": "docker compose -f infra/compose.yaml up -d",
    "docker:down": "docker compose -f infra/compose.yaml down",
    "docker:stop": "docker compose -f infra/compose.yaml stop",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky"
  },
  "author": "Simone Amorim",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "17.2.3",
    "next": "^16.0.10",
    "node-pg-migrate": "^7.6.1",
    "pg": "8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "concurrently": "9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "prettier": "3.7.4"
  }
}
